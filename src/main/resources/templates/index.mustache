{{> header}} 

<div class="container mt-3">

  <table class="table table-hover">
    <thead>
      <tr>
        <th>번호</th>
        <th>제목</th>
        <th>내용</th>
      </tr>
    </thead>
    <tbody>
      {{#models}}
      <tr onclick="location.href='/boards/{{id}}'" style="cursor:pointer;">
        <td>{{id}}</td>

        <!-- 제목: a태그 제거하고 그냥 출력 -->
        <td>{{title}}</td>

        <!-- 내용: 유튜브 제목 있으면 그거, 없으면 content -->
        <td>
          {{#youtubeTitle}}
            {{youtubeTitle}}
          {{/youtubeTitle}}

          {{^youtubeTitle}}
            {{content}}
          {{/youtubeTitle}}
        </td>
      </tr>
      {{/models}}
    </tbody>
  </table>
</div>

</body>
</html>
